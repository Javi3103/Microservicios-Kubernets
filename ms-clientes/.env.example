# Archivo de ejemplo de variables de entorno
# Copia este archivo como .env y ajusta los valores según tus necesidades
# Docker Compose lo cargará automáticamente

# ==================== POSTGRESQL PRINCIPAL ====================
POSTGRES_DB=db_parkin_users
POSTGRES_USER=postgres
POSTGRES_PASSWORD=kausa
POSTGRES_PORT=5432

# ==================== KONG DATABASE ====================
KONG_DB_NAME=kong
KONG_DB_USER=kong
KONG_DB_PASSWORD=kong
KONG_DB_PORT=5433

# ==================== MS-CLIENTES ====================
SPRING_DATASOURCE_URL=jdbc:postgresql://db:5432/db_parkin_users
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=kausa
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SERVER_PORT=8081

# ==================== KONG GATEWAY ====================
KONG_PROXY_PORT=8000
KONG_PROXY_SSL_PORT=8443
KONG_ADMIN_PORT=8001
KONG_ADMIN_SSL_PORT=8444

# ==================== LOGS ====================
SPRING_LOG_LEVEL=DEBUG
SPRING_LOG_PACKAGE=ec.edu.espe.ms_clientes

# ==================== ACTUATOR ====================
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=always

